<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingStart="@dimen/margin_padding_by_side"
    android:paddingEnd="@dimen/margin_padding_by_side">

    <ImageView
        android:id="@+id/contactIconImageView"
        android:layout_width="@dimen/user_icon_size"
        android:layout_height="@dimen/user_icon_size"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_scan" />

    <TextView
        android:id="@+id/contactNameTextView"
        style="@style/TextAppearance.Soramitsu.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_content_by_side"
        android:layout_marginTop="@dimen/margin_padding_description"
        android:layout_marginEnd="@dimen/margin_padding_content_by_side"
        android:layout_marginBottom="@dimen/margin_padding_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contactRightArrowImageView"
        app:layout_constraintStart_toEndOf="@id/contactIconImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sora Labs" />

    <ImageView
        android:id="@+id/contactRightArrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_by_side"
        android:layout_marginTop="@dimen/margin_padding_by_side"
        android:layout_marginBottom="@dimen/margin_padding_by_side"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/contactsRedSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/uikit_lightRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>