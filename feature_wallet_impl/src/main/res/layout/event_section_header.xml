<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:paddingStart="@dimen/margin_padding_by_side"
    android:paddingEnd="@dimen/margin_padding_by_side"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventItemDayTextView"
        style="@style/TextAppearance.Soramitsu.Body1"
        android:layout_width="wrap_content"
        android:textColor="@color/subtitleGrey"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="@dimen/x1_5"
        android:paddingBottom="@dimen/x1_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Today" />

</androidx.constraintlayout.widget.ConstraintLayout>